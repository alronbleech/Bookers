<div class="index-header">
  <h1>Books</h1>
</div>

<div class="index-table">
  <table>
    <tr align="center">
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
      <tr align="center">
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>
        <td>
          <%= link_to "Show", book_path(book.id), class: "index-item" %>
        </td>
        <td>
          <%= link_to "Edit", edit_book_path(book.id), class: "index-item" %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(book.id), class: "index-item" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<div class="index-new">
  <div class="new-header">
    <h2>New book</h2>
  </div>

  <%= form_with model: @book do |f| %>
    <div class="new-title">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>

    <div class="new-body">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>

      <%= f.submit 'Cleate Book' %>

  <% end %>
</div>