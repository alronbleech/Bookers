<div class="edit">
  <div class="edit-header">
    <h1>Editing Book</h1>
  </div>

  <% if @book.errors.any? %>
    <div class="error">
      <p class="error-header"><%= @book.errors.count %> errors prohibited this book from being saved:</p>
      <ul class="error-message">
        <% @book.errors.full_messages.each do |message| %>
         <li claas="error-list"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @book do |f| %>
    <div class="edit-title">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>

    <div class="edit-body">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>

      <%= f.submit 'Update Book', class: 'edit-update' %>

    <div class="edit-link">
      <p><%= link_to "show", book_path(@book.id), class: "edit-show" %></p>
      <p class="edit-border">|</p>
      <p><%= link_to "Back", books_path, class: "edit-back" %></p>
    </div>
  <% end %>
</div>